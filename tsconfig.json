{
  "compilerOptions": {
    "moduleDetection": "force",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "es6", "es5", "esnext"],
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "allowImportingTsExtensions": true
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
